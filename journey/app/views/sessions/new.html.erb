<main class="screen">
  <h1 class="app-title">Journey</h1>

  <section class="card" aria-labelledby="login-title">
    <h2 id="login-title" class="card-title"><%= t("sessions.new.title") %></h2>

    <% if flash[:alert].present? %>
      <div style="color:#b00"><%= t("sessions.new.alert") %></div>
    <% end %>

    <%= form_for :session, url: session_path, html: { class: "form" }, data: { turbo: false } do |f| %>
      <label class="field">
        <span class="label"><%= t("sessions.new.email") %></span>
        <%= f.email_field :email, required: true, autocomplete: "username" %>
      </label>

      <label class="field">
        <span class="label"><%= t("sessions.new.password") %></span>
        <%= f.password_field :password, required: true, autocomplete: "current-password" %>
      </label>

      <div class="actions">
        <%= link_to t("sessions.new.sign_up"), sign_up_path, class: "link small" %>
        <button class="btn" type="submit"><%= t("sessions.new.sign_in") %></button>
      </div>
    <% end %>
  </section>
</main>
